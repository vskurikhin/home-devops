[Unit]
Description=etcd key-value store
Documentation=https://github.com/etcd-io/etcd
After=network.target

[Service]
User=etcd
Type=notify
ExecStart=/usr/local/bin/etcd --name dns000 --initial-advertise-peer-urls 'http://192.168.88.10:2380' --listen-peer-urls 'http://192.168.88.10:2380' --advertise-client-urls 'http://192.168.88.10:2379' --listen-client-urls 'http://192.168.88.10:2379' --initial-cluster dns000=http://192.168.88.10:2380,pgs001=http://192.168.88.51:2380,pgs002=http://192.168.88.52:2380 --initial-cluster-state new --initial-cluster-token XXXXXXXXXXXXXXXXXXXXXXXX --data-dir /var/lib/etcd
Restart=always
RestartSec=10s
LimitNOFILE=40000

[Install]
WantedBy=multi-user.target
