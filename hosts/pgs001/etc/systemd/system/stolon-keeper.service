[Unit]
Description=Stolon Keeper
Documentation=https://github.com/sorintlab/stolon
After=network.target

[Service]
Environment=PATH=/usr/pgsql-12/bin:$PATH
User=postgres
Type=simple
ExecStart=/usr/local/stolon/bin/stolon-keeper --cluster-name stolon-cluster --store-backend=etcdv3 --uid postgres1 --data-dir /var/lib/pgsql/12-stolon-keeper --pg-su-password='XXXX' --pg-repl-username=replicator --pg-repl-password='XXXX' --pg-repl-auth-method='md5' --pg-listen-address=192.168.88.51 --store-endpoints='http://192.168.88.51:2379'
Restart=on-abort
LimitNOFILE=65535

[Install]
WantedBy=stolon-sentinel.service
